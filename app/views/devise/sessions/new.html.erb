<div id="block">
<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="field"><%= f.label :email, :class => "field1" %>
  <%= f.email_field :email, :autofocus => true, :class => "field2" %></div>

  <div class="field"><%= f.label :password, :class => "field1" %>
  <%= f.password_field :password, :class => "field2" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me, :class => "spaceAdd" %></div>
  <% end -%>

  <div><%= f.submit "Sign in", :class => "log spaceAdd" %></div>
<% end %>

	<%= render "devise/shared/links" %>
</div>
