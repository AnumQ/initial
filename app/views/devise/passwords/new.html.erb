<div id="mainBlock">

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>
</div>
<div id="block">
<h2>Forgot your password?</h2>
  <div class="field"><%= f.label :email, :class => "field1" %>
  <%= f.email_field :email, :autofocus => true, :class => "field3" %></div>

  <div><%= f.submit "Send me reset password instructions", :class => "log2" %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>
