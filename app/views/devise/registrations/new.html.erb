<div id="mainBlock">


<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
 
 </div>
<div id="block">
	<h2>Sign up</h2>

  <div class="field"><%= f.label :email, :class => "field1" %> <%= f.email_field :email, :autofocus => true, :class => "field2" %></div>
  
  <div class="field"><%= f.label :firstname, :class => "field1" %> <%= f.text_field :firstname, :class => "field2" %></div>
  
  <div class="field"><%= f.label :surname, :class => "field1" %> <%= f.text_field :surname, :class => "field2" %></div>
  
  <div class="field"><%= f.label :phone_no, :class => "field1" %> <%= f.text_field :phone, :class => "field2" %></div>
  
  <div class="field"><%= f.label :aims_no, :class => "field1" %> <%= f.text_field :aimsno, :class => "field2" %></div>
  
  <div class="field"><%= f.check_box :admin %> <%= f.label :admin %></div>
  
  <div class="field"><%= f.label :password, :class => "field1" %><%= f.password_field :password, :class => "field2" %></div>

  <div class="field"><%= f.label :password_confirmation, :class => "field1" %><%= f.password_field :password_confirmation, :class => "field2" %></div>


  <div><%= f.submit "Sign up", :class => "log spaceAdd" %></div>
<% end %>
	

<%= render "devise/shared/links" %>


</div>
